{
  "manifest_version": 3,
  "name": "Local Script Injector",
  "version": "1.0.0",
  "description": "Inject local JavaScript into any webpage with Hot Reload support.",
  "permissions": [
    "cookies",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Local Script Injector"
  }
}